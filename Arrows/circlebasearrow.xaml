<UserControl x:Class="EMx.UI.Arrows.CircleBaseArrow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EMx.UI.Arrows"
             SnapsToDevicePixels="true">
  <FrameworkElement.LayoutTransform>
    <RotateTransform Angle="0" x:Name="ctrlRotateTr"/>
  </FrameworkElement.LayoutTransform>
  <Grid>
    <Polygon x:Name="ctrlArrow" Stroke="#07010A" StrokeThickness="2" Fill="#6EA1FF"
             Points="0,40 0,20 150,20 150,0 200,30 150,60 150,40"/>
  </Grid>
</UserControl>