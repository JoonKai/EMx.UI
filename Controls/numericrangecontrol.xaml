<UserControl x:Class="EMx.UI.Controls.NumericRangeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="30"/>
      <ColumnDefinition Width="25"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="30"/>
    </Grid.ColumnDefinitions>
    <TextBox x:Name="txtBegin" Margin="2" BorderThickness="1" BorderBrush="LightGray"
             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch"/>
    <Label Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
           Content="{Binding Path=Unit}"/>
    <Label Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">~</Label>
    <TextBox x:Name="txtEnd" Grid.Column="3" Margin="2" BorderThickness="1" BorderBrush="LightGray"
             HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch"/>
    <Label Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center"
           Content="{Binding Path=Unit}"/>
  </Grid>
</UserControl>