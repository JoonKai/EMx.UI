<UserControl x:Class="EMx.UI.Controls.ToggleStateButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EMx.UI.Controls"
             Loaded="UserControl_Loaded">
  <Label MouseLeftButtonUp="button_Click" x:Name="button" HorizontalAlignment="Stretch"
         VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
         Content="{Binding Text}" FontSize="{Binding TextSize}"/>
</UserControl>