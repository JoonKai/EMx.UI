<UserControl x:Class="EMx.UI.FloatMaps.WaferFloatMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EMx.UI.FloatMaps"
             xmlns:euivc="clr-namespace:EMx.UI.ValueConverters"
             SizeChanged="UserControl_SizeChanged">
  <FrameworkElement.Resources>
    <euivc:StringToColorConverter x:Key="convStringToColor"/>
    <euivc:StringToSolidBrushConverter x:Key="convStringToBrush"/>
  </FrameworkElement.Resources>
  <Grid>
    <Image x:Name="ctrlMapImage" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch"
           Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
  </Grid>
</UserControl>